{
    "env": {
        "es2021": true
    },
    "extends": [
        "plugin:prettier/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "quotes": ["error", "single"]
    },
    "ignorePatterns": [
        "**/dist/**",
        "**/build/**"
    ]
}