{
	"name": "plumejs-esnext",
	"version": "2.0.0",
	"private": true,
	"files": [
		"dist"
	],
	"main": "./dist/plume.umd.js",
	"module": "./dist/plume.es.js",
	"exports": {
		".": {
			"import": "./dist/plume.es.js",
			"require": "./dist/plume.umd.js"
		}
	},
	"scripts": {
		"start": "npm run vite:start",
		"serve": "webpack-dev-server --config webpack/server.js",
		"build": "npm run build:bundle && npm run build:lib",
		"build:bundle": "webpack --config webpack/build.js",
		"build:lib": "vite build",
		"vite:start": "vite",
		"lint": "eslint . --ext .js --fix",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"dependencies": {
		"@picocss/pico": "^1.4.4",
		"axios": "^0.24.0",
		"bulma": "^0.9.3",
		"bulma-block-list": "^0.5.0",
		"markdown-it": "^12.3.2",
		"rxjs": "^6.6.0",
		"simpledotcss": "^2.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@babel/eslint-parser": "^7.16.5",
		"@babel/plugin-proposal-class-properties": "^7.16.0",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-arrow-functions": "^7.16.0",
		"@babel/preset-env": "^7.16.0",
		"babel-loader": "^8.2.3",
		"construct-style-sheets-polyfill": "^3.0.4",
		"css-loader": "^6.5.1",
		"eslint": "^8.7.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"html-loader": "^3.0.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^8.0.1",
		"prettier": "^2.5.1",
		"sass": "^1.43.4",
		"sass-loader": "^12.3.0",
		"style-loader": "^3.3.1",
		"terser-webpack-plugin": "^5.2.4",
		"vite": "^2.7.13",
		"webpack": "^5.61.0",
		"webpack-cli": "^4.9.1",
		"webpack-dev-server": "^4.4.0",
		"webpack-merge": "^5.8.0"
	},
	"description": "webcomponents based lightweight javascript framework"
}
