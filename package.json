{
  "name": "plumejs-esnext",
  "version": "3.2.0",
  "private": true,
  "files": [
    "build"
  ],
  "main": "./build/plume.umd.js",
  "module": "./build/plume.es.js",
  "exports": {
    ".": {
      "import": "./build/plume.es.js",
      "require": "./build/plume.umd.js"
    }
  },
  "scripts": {
    "start": "npm run vite:start",
    "serve": "webpack-dev-server --config webpack/server.js",
    "build": "npm run build:bundle && npm run build:lib",
    "build:bundle": "webpack --config webpack/build.js",
    "build:lib": "vite build",
    "vite:start": "vite",
    "lint": "eslint . --ext .js --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@picocss/pico": "^1.5.7",
    "axios": "^1.3.0",
    "bulma": "^0.9.4",
    "bulma-block-list": "^0.6.0",
    "markdown-it": "^13.0.1",
    "rxjs": "^7.8.0",
    "simpledotcss": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.20.13",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-arrow-functions": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "babel-loader": "^9.1.2",
    "construct-style-sheets-polyfill": "^3.1.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "sass": "^1.58.0",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "vite": "^4.0.4",
    "vite-plugin-babel": "^1.1.3",
    "vite-plugin-compression": "^0.5.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "description": "webcomponents based lightweight javascript framework"
}
